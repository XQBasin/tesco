swiper {
  height: 1100rpx;
}
.content .item {
  box-shadow: 5rpx 0 7rpx #dcdcdc;
  margin-bottom: 14rpx;
}
.content .item .top {
  padding: 24rpx 10px;
  background: #fff;
  display: flex;
  align-items: center;
}
.content .item .top .name,
.content .item .top .img {
  float: left;
}
.content .item .top .img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #d6d6d6;
}
.content .item .top .name {
  margin-left: 20rpx;
}
.content .item .middle {
  padding: 0 10px 20rpx;
  background: #fff;
  position: relative;
}
.content .item .middle .left,
.content .item .middle .right {
  float: left;
}
.content .item .middle .left {
  width: 30%;
}
.content .item .middle .left image {
  width: 200rpx;
  height: 200rpx;
}
.content .item .middle .right {
  width: 65%;
  margin-left: 25rpx;
}
.content .item .middle .right .title {
  font-size: 26rpx;
  margin-bottom: 11rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .item .middle .right .total {
  color: #eb0202;
  font-size: 36rpx;
}
.content .item .middle .cancel,
.content .item .middle .enter {
  position: absolute;
  bottom: 20rpx;
  width: 150rpx;
  height: 44rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .item .middle .cancel {
  color: #999999;
  border: 1px solid #999999;
  right: 185rpx;
}
.content .item .middle .enter {
  color: #f87005;
  border: 1px solid #f87005;
  right: 20rpx;
}
.content .item .middle::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
.content .list {
  padding: 0 10px;
  height: 150rpx;
  background: #fff;
  margin-bottom: 3rpx;
  display: flex;
  align-items: center;
}
.content .list .icon {
  float: left;
  width: 66rpx;
  height: 66rpx;
  background: #999999;
  border-radius: 10rpx;
}
.content .list .info {
  float: left;
  width: 73%;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.content .list .info .detail {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content .list .enter {
  width: 15%;
  height: 50rpx;
  float: right;
  font-size: 20rpx;
  color: #f87005;
  border: 1px solid #f87005;
  border-radius: 25rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .list::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
