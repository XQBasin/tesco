.head {
  padding: 30rpx 10px;
  background: #fff;
  margin-bottom: 14rpx;
  display: flex;
}
.head .img {
  width: 30%;
}
.head .img image {
  width: 144rpx;
  height: 144rpx;
}
.head .details {
  width: 70%;
  font-size: 24rpx;
  color: #999999;
}
.head .details .flag {
  font-size: 28rpx;
  color: #191919;
}
.head .details .flag text {
  color: #f87005;
}
.middle {
  padding: 24rpx 10px;
  background: #fff;
  margin-bottom: 14rpx;
  height: 130rpx;
}
.middle .img,
.middle .info {
  float: left;
}
.middle .img {
  height: 100%;
  display: flex;
  align-items: center;
}
.middle .img image {
  width: 64rpx;
  height: 64rpx;
}
.middle .info {
  font-size: 28rpx;
  margin-left: 24rpx;
}
.middle .info .title {
  color: #999999;
  font-size: 24rpx;
}
.middle .phone {
  float: right;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.content {
  padding: 40rpx 10px 40rpx 72rpx;
}
.content .item {
  padding: 0 44rpx 62rpx 44rpx;
  border-left: 1px solid #999999;
  color: #999999;
  font-size: 28rpx;
  position: relative;
}
.content .item .gray {
  position: absolute;
  top: 14rpx;
  left: -12rpx;
  width: 25rpx;
  height: 25rpx;
  background: #999999;
  border-radius: 50%;
}
.content .item .time {
  font-size: 24rpx;
}
.content .item.success {
  color: #56bf16;
  position: relative;
}
.content .item.success .green {
  position: absolute;
  top: -5rpx;
  left: -18rpx;
}
.content .item.success .green image {
  width: 36rpx;
  height: 36rpx;
}
