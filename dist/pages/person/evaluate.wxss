swiper {
  height: 1100rpx;
}
.item .leave {
  width: 136rpx;
  height: 50rpx;
  position: absolute;
  right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  background: #f87005;
}
.item {
  box-shadow: 5rpx 0 7rpx #dcdcdc;
  margin-bottom: 14rpx;
}
.item .top {
  height: 95rpx;
  position: relative;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
}
.item .top .img,
.item .top .name,
.item .top .operation {
  float: left;
}
.item .top .img image {
  width: 65rpx;
  height: 65rpx;
}
.item .top .name {
  margin-left: 23rpx;
  font-size: 26rpx;
}
.item .top .name .time {
  font-size: 24rpx;
  color: #999999;
}
.item .top .operation {
  position: absolute;
  right: 10px;
  display: flex;
  align-items: center;
}
.item .top .operation .evaluate {
  padding: 0 14rpx;
}
.item .top .operation .evaluate.good {
  color: #f87005;
}
.item .top .operation .evaluate.medium {
  color: #f7b808;
}
.item .top .operation .evaluate.bad {
  color: #999999;
}
.item .content {
  font-size: 30rpx;
}
.item .content .main {
  background: #fff;
  padding: 15rpx 10px 18rpx;
  margin-bottom: 2rpx;
}
.item .content .main .img {
  margin-top: 20rpx;
}
.item .content .main .img image {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin: 0 9rpx;
}
.item .content .review {
  background: #fff;
  padding: 20rpx 10px 38rpx;
  display: flex;
}
.item .content .review .text {
  width: 70%;
}
.item .content .review .text .before {
  color: #f87005;
}
.item .content .review .time {
  width: 30%;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
}
.item .middle {
  padding: 20rpx 10px;
}
.item .middle .left,
.item .middle .right {
  float: left;
}
.item .middle .left {
  width: 30%;
}
.item .middle .left image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #bfbfbf;
}
.item .middle .right {
  width: 65%;
  color: #999999;
  font-size: 24rpx;
  margin-left: 25rpx;
}
.item .middle .right .title {
  font-size: 26rpx;
  color: #020202;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item .middle .right .purchased {
  margin-bottom: 15rpx;
}
.item .middle::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
.item .bottom {
  height: 74rpx;
  background: #fff;
  position: relative;
  display: flex;
  align-items: center;
}
.item .bottom .unfocused,
.item .bottom .focus {
  float: right;
  width: 150rpx;
  height: 44rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 10px;
}
.item .bottom .unfocused {
  color: #666666;
  border-radius: 23rpx;
  border: 1px solid #666666;
}
.item .bottom .focus {
  color: #f87005;
  border-radius: 23rpx;
  border: 1px solid #f87005;
}
