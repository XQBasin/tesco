.head {
  height: 262rpx;
  position: relative;
}
.head .after {
  height: 262rpx;
  background: #f7ab4e;
}
.head .before {
  position: absolute;
  top: 55rpx;
  width: 100%;
  padding: 0 26rpx 0 26rpx;
}
.head .before .left {
  float: left;
  width: 110rpx;
}
.head .before .left image {
  width: 110rpx;
  height: 110rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}
.head .before .middle {
  float: left;
  width: 50%;
  padding-left: 32rpx;
  color: #fff;
}
.head .before .middle .username {
  font-size: 36rpx;
}
.head .before .middle .member {
  width: 134rpx;
  height: 42rpx;
  font-size: 24rpx;
  border-radius: 21rpx;
  background: rgba(255, 255, 255, 0.21);
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.head .before .right {
  float: right;
  width: 30%;
  color: #fff;
}
.head .before .right .footprint,
.head .before .right .collect {
  float: left;
}
.head .before .right .collect {
  margin-left: 60rpx;
}
.head .before .right .zuji-icon,
.head .before .right .shoucang-icon {
  display: flex;
  justify-content: center;
}
.wallet,
.myorder,
.need {
  margin: -22rpx 0 16rpx 0;
  padding: 10rpx 26rpx 30rpx 26rpx;
  position: relative;
  z-index: 2;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
}
.wallet .top,
.myorder .top,
.need .top {
  border-bottom: 1px solid #ececec;
  height: 64rpx;
  line-height: 64rpx;
}
.wallet .top .title,
.myorder .top .title,
.need .top .title {
  float: left;
  font-size: 30rpx;
}
.wallet .top .more,
.myorder .top .more,
.need .top .more {
  float: right;
  color: #999999;
}
.wallet .middle,
.myorder .middle,
.need .middle {
  padding-top: 20rpx;
}
.wallet .middle .money,
.myorder .middle .money,
.need .middle .money {
  float: left;
  font-size: 60rpx;
  color: #f87005;
  font-weight: bold;
}
.wallet .middle .money text,
.myorder .middle .money text,
.need .middle .money text {
  font-size: 30rpx;
  font-weight: normal;
}
.wallet .middle .handle,
.myorder .middle .handle,
.need .middle .handle {
  float: right;
  margin-top: 10rpx;
}
.wallet .middle .handle .use,
.myorder .middle .handle .use,
.need .middle .handle .use {
  width: 152rpx;
  height: 50rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
  background: #f87005;
  border-radius: 26rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wallet .middle .handle .text,
.myorder .middle .handle .text,
.need .middle .handle .text {
  color: #f87005;
  font-size: 18rpx;
}
.wallet .bottom,
.myorder .bottom,
.need .bottom {
  margin-top: 20rpx;
}
.wallet .bottom .text,
.myorder .bottom .text,
.need .bottom .text {
  float: left;
  color: #999999;
  font-size: 24rpx;
}
.wallet .bottom .text text,
.myorder .bottom .text text,
.need .bottom .text text {
  color: #f87005;
}
.wallet .bottom .mar,
.myorder .bottom .mar,
.need .bottom .mar {
  margin-left: 58rpx;
}
.myorder {
  margin-top: 0;
  border-radius: 0;
}
.myorder .middle {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.myorder .middle .operation {
  width: 20%;
}
.myorder .middle .operation .order-icon image {
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto;
}
.myorder .middle .operation .text {
  text-align: center;
  margin-top: 10rpx;
}
.need {
  margin-top: 0;
  border-radius: 0;
}
.need .middle {
  width: 100%;
  padding-top: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.need .middle .operation {
  width: 25%;
  margin-top: 30rpx;
}
.need .middle .operation .order-icon {
  text-align: center;
  font-size: 30rpx;
  color: #f87005;
}
.need .middle .operation .order-icon image {
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto;
}
.need .middle .operation .text {
  text-align: center;
  margin-top: 10rpx;
}
.banner image {
  height: 210rpx;
}
.recommend {
  height: 132rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.group-content {
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.group-content .group-content-list {
  padding-bottom: 11rpx;
  margin-bottom: 12rpx;
  width: 49%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 5rpx 7rpx 9rpx #c5c5c5;
  overflow: hidden;
}
.group-content .group-content-list .shop-detail {
  padding: 0 17rpx;
}
.group-content .group-content-list .shop-detail .shop-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.group-content .group-content-list .shop-detail .price {
  margin-top: 12rpx;
  font-size: 36rpx;
  color: #f87005;
  font-weight: bold;
}
.group-content .group-content-list .shop-detail .price .coupon {
  font-size: 24rpx;
  margin-left: 5rpx;
  font-weight: normal;
}
.group-content .group-content-list .shop-detail .fill {
  width: 136rpx;
  height: 28rpx;
  background: #f87005;
  color: #fff;
  border-radius: 14rpx;
  font-size: 20rpx;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.group-content .group-content-list .shop-detail .evaluate {
  font-size: 24rpx;
  color: #bababa;
}
.wallet .bottom::after,
.wallet .middle::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
