.head {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10px;
  background: #fff;
  margin-bottom: 12rpx;
}
.head .tip {
  color: #999999;
  float: left;
}
.head .operation {
  float: right;
  color: #f87005;
}
.list {
  padding: 20rpx 10px;
  margin-top: 1px;
  background: #fff;
  position: relative;
  margin-bottom: 3rpx;
}
.list .left,
.list .right {
  float: left;
}
.list .left {
  width: 30%;
}
.list .left image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #bfbfbf;
}
.list .right {
  width: 65%;
  font-size: 28rpx;
  margin-left: 25rpx;
}
.list .right .title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .right .total {
  font-size: 36rpx;
  color: #f87005;
  margin-top: 10rpx;
  font-weight: bold;
}
.list .resetW {
  width: 55%;
}
.list .cancel {
  width: 10%;
  float: left;
  height: 204rpx;
  display: flex;
  align-items: center;
}
.list .again {
  position: absolute;
  right: 10px;
  bottom: 20rpx;
  font-size: 28rpx;
  width: 136rpx;
  height: 40rpx;
  color: #f87005;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  border: 1px solid #f87005;
}
.list::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
