.placeholder {
  font-size: 30rpx;
  color: #999999;
}
.popup {
  width: 100%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}
.popup::after {
  display: block;
  content: '';
  height: 200rpx;
}
.survey .item {
  padding: 0 10px;
  background: #fff;
  margin-bottom: 2px;
}
.survey .item .icon,
.survey .item .tip-info,
.survey .item .text {
  height: 120rpx;
  float: left;
}
.survey .item .icon {
  display: flex;
  align-items: center;
}
.survey .item .icon image {
  width: 50rpx;
  height: 50rpx;
}
.survey .item .tip-info {
  line-height: 120rpx;
  font-weight: bold;
  font-size: 30rpx;
  margin: 0 48rpx 0 12rpx;
}
.survey .item .text {
  width: 475rpx;
  display: flex;
  align-items: center;
}
.survey .item::after {
  display: block;
  clear: both;
  height: 0;
  content: '';
}
.survey .item.number {
  height: 356rpx;
}
.survey .item.number .top {
  display: flex;
}
.survey .item.number .middle {
  text-align: center;
}
.survey .item.number .middle .num {
  font-size: 80rpx;
  font-weight: bold;
  color: #f87005;
}
.survey .item.number .middle .tip {
  font-size: 24rpx;
  color: #999999;
}
.survey .item.useful {
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  margin-bottom: 10rpx;
}
.survey .item.useful .left {
  float: left;
  color: #999999;
}
.survey .item.useful .right {
  float: right;
  color: #f87005;
}
.survey .item.remarks {
  height: 180rpx;
  padding-top: 30rpx;
  margin-bottom: 134rpx;
}
.survey .item.remarks textarea {
  width: 100%;
  height: 135rpx;
}
.bottom {
  padding: 0 10px;
}
.bottom .confirm {
  height: 90rpx;
  background: #f87005;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: #fff;
  border-radius: 6rpx;
  font-size: 36rpx;
}
.bottom .tip {
  margin-top: 22rpx;
  font-size: 30rpx;
}
.bottom .tip .notes {
  float: left;
  color: #999999;
}
.bottom .tip .details {
  float: right;
  color: #f87005;
}
.show .text {
  width: 100%;
  background: #ececec;
  line-height: 72rpx;
  height: 72rpx;
  padding-left: 24rpx;
  font-size: 30rpx;
}
.show .cancel-icon {
  position: absolute;
  right: 20rpx;
  top: 0;
  line-height: 72rpx;
}
.show .info {
  padding-left: 24rpx;
  position: relative;
  margin-top: 25rpx;
}
.show .info .dot {
  width: 20rpx;
  height: 20rpx;
  background: #f87005;
  position: absolute;
  top: 10rpx;
  border-radius: 50%;
}
.show .info .address-content {
  padding: 0 30rpx 0 45rpx;
}
.show .line {
  width: 100%;
  height: 1px;
  border-top: 1px dashed #999999;
  margin: 40rpx 0;
}
.mask {
  width: 506rpx;
  height: 274rpx;
  background: #fff;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.36);
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -253rpx;
  margin-top: -137rpx;
  text-align: center;
}
.mask .lack {
  font-size: 36rpx;
  font-weight: bold;
}
.mask .details {
  font-size: 28rpx;
}
