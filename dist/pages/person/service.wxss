.top {
  height: 90rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.top .search {
  width: 85%;
  height: 56rpx;
  border-radius: 30px;
  padding: 2px 10px;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  left: 10px;
  right: 0;
  /* 决定了搜索框置顶 */
  z-index: 2;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}
.top .search input {
  width: 100%;
  padding: 2rpx 5rpx;
  margin: 2rpx;
  font-size: 26rpx;
}
.top .text {
  height: 56rpx;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  right: 20rpx;
  /* 决定了搜索框置顶 */
  z-index: 2;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.content .item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10px;
  background: #fff;
  margin-bottom: 1px;
}
