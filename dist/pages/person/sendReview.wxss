.list {
  margin-bottom: 16rpx;
}
.list .head {
  padding: 30rpx 10px;
  background: #fff;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
}
.list .head .img {
  width: 84rpx;
  float: left;
  background: #eeeeee;
}
.list .head .img image {
  width: 84rpx;
  height: 84rpx;
}
.list .head .details {
  float: left;
  margin-left: 18rpx;
  font-size: 26rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .comment {
  height: 216rpx;
  padding: 14rpx 10px;
  background: #fff;
  position: relative;
}
.list .comment textarea {
  width: 100%;
  height: 216rpx;
}
.list .addImage {
  padding: 16rpx 10px;
  background: #fff;
  margin-bottom: 6rpx;
}
.list .addImage .title text {
  color: #999999;
}
.list .addImage .img {
  display: flex;
  flex-wrap: wrap;
}
.list .addImage .img image {
  width: 164rpx;
  height: 164rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
.form::after {
  display: block;
  content: '';
  height: 108rpx;
  width: 1px;
}
.submit {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  color: #fff;
  background: #f87005;
  margin: 0;
  border-radius: 0;
}
.submit::after {
  border: none;
}
