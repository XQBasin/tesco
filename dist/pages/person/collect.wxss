swiper {
  height: 1100rpx;
}
.content .head {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10px;
}
.content .head .tip {
  color: #999999;
  float: left;
}
.content .list {
  padding: 20rpx 10px;
  margin-top: 1px;
  background: #fff;
  position: relative;
  margin-bottom: 3rpx;
  display: flex;
}
.content .list .left {
  width: 30%;
}
.content .list .left image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #bfbfbf;
}
.content .list .right {
  width: 65%;
  font-size: 28rpx;
  margin-left: 25rpx;
}
.content .list .right .title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .list .right .total {
  font-size: 36rpx;
  color: #f87005;
  margin-top: 10rpx;
  font-weight: bold;
}
.content .list .right .fill {
  background: #f87005;
  color: #fff;
  width: 140rpx;
  height: 30rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .list .enter,
.content .list .cancel {
  position: absolute;
  right: 10px;
  bottom: 20rpx;
  font-size: 28rpx;
  width: 136rpx;
  height: 40rpx;
  color: #f87005;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  border: 1px solid #f87005;
}
.content .list .cancel {
  right: 173rpx;
  color: #999999;
  border: 1px solid #999999;
}
