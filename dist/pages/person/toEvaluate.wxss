.head {
  padding: 30rpx 10px;
  background: #fff;
  margin-bottom: 6rpx;
  display: flex;
}
.head .img {
  width: 30%;
  float: left;
}
.head .img image {
  width: 144rpx;
  height: 144rpx;
}
.head .details {
  float: right;
  width: 70%;
  font-size: 30rpx;
}
.star-demo {
  padding: 20rpx 0;
}
.star-demo .result {
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #ff5800;
}
.comment {
  height: 241rpx;
  padding: 14rpx 10px;
  background: #fff;
  margin-bottom: 6rpx;
  position: relative;
}
.comment textarea {
  width: 100%;
  height: 190rpx;
}
.comment .text-number {
  position: absolute;
  right: 0;
  bottom: -40rpx;
  color: #999999;
}
.addImage {
  padding: 16rpx 10px;
  background: #fff;
  margin-bottom: 6rpx;
}
.addImage .title text {
  color: #999999;
}
.addImage .img {
  display: flex;
}
.addImage .img image {
  width: 164rpx;
  height: 164rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
.anonymous,
.show {
  height: 100rpx;
  background: #fff;
  padding: 0 10px;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}
.anonymous text,
.show text {
  margin-left: 20rpx;
}
.show text .cunjing {
  margin: 0;
  color: #eb0202;
  font-weight: bold;
}
.log-evaluate {
  padding: 24rpx 10px;
  background: #fff;
  padding-bottom: 170rpx;
}
.log-evaluate .title {
  display: flex;
}
.log-evaluate .title .car-icon,
.log-evaluate .title .text {
  float: left;
}
.log-evaluate .title .car-icon image {
  width: 54rpx;
  height: 54rpx;
}
.log-evaluate .title .text {
  font-weight: bold;
  font-size: 36rpx;
}
.log-evaluate .star {
  position: relative;
  margin-top: 20rpx;
}
.log-evaluate .star .star-demo {
  position: absolute;
  top: 0;
  left: 200rpx;
  padding: 0;
}
.submit {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  color: #fff;
  background: #f87005;
  margin: 0;
  border-radius: 0;
}
.submit::after {
  border: none;
}
