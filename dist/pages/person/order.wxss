.content .item {
  box-shadow: 5rpx 0 7rpx #dcdcdc;
  margin-bottom: 14rpx;
}
.content .item .top {
  height: 95rpx;
  position: relative;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
}
.content .item .top .img,
.content .item .top .name,
.content .item .top .operation {
  float: left;
}
.content .item .top .img image {
  width: 65rpx;
  height: 65rpx;
}
.content .item .top .name {
  margin-left: 23rpx;
}
.content .item .top .operation {
  position: absolute;
  right: 10px;
  display: flex;
  align-items: center;
}
.content .item .top .operation .evaluate,
.content .item .top .operation .clear-icon {
  float: left;
  padding: 0 20rpx;
}
.content .item .top .operation .evaluate {
  box-sizing: border-box;
  border-right: 1px solid #999999;
}
.content .item .top .operation .wait {
  color: #f87005;
}
.content .item .top .operation .clear-icon {
  padding: 0 0 0 20rpx;
}
.content .item .middle {
  padding: 20rpx 10px;
}
.content .item .middle .left,
.content .item .middle .right {
  float: left;
}
.content .item .middle .left {
  width: 30%;
}
.content .item .middle .left image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #bfbfbf;
}
.content .item .middle .right {
  width: 65%;
  color: #999999;
  font-size: 24rpx;
  margin-left: 25rpx;
}
.content .item .middle .right .title {
  font-size: 26rpx;
  color: #020202;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .item .middle .right .des {
  margin-bottom: 17rpx;
}
.content .item .middle::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
.content .item .bottom {
  height: 74rpx;
  background: #fff;
  position: relative;
  display: flex;
  align-items: center;
}
.content .item .bottom .unfocused,
.content .item .bottom .focus {
  float: right;
  width: 150rpx;
  height: 44rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 10px;
}
.content .item .bottom .unfocused {
  color: #666666;
  border-radius: 23rpx;
  border: 1px solid #666666;
  right: 190rpx;
}
.content .item .bottom .focus {
  color: #f87005;
  border-radius: 23rpx;
  border: 1px solid #f87005;
}
.content .item .bottom .focus.pay {
  background: #f87005;
  color: #fff;
}
.reasonMask {
  width: 698rpx;
  height: 779rpx;
  border-radius: 20rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -349rpx;
  margin-top: -389.5rpx;
}
.reasonMask .head {
  height: 90rpx;
  background: #ececec;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.reasonMask .head .close {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.reasonMask .content {
  padding: 0 32rpx;
}
.reasonMask .content .list {
  padding: 20rpx 0;
  border-bottom: 1px dashed #999999;
  font-size: 30rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
}
.reasonMask .content .list span {
  padding: 15rpx 0;
  position: absolute;
  top: 0;
  right: 0;
}
.reasonMask .bottom {
  width: 100%;
  padding: 19rpx 0;
  height: 120rpx;
  background: #ececec;
  position: absolute;
  bottom: 0;
  border-radius: 0 0 20rpx 20rpx;
}
.reasonMask .bottom .cancel,
.reasonMask .bottom .confirm {
  float: left;
  box-sizing: border-box;
  width: 50%;
  font-size: 36rpx;
  color: #bababa;
  font-weight: bold;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.reasonMask .bottom .confirm {
  color: #f87005;
  border-left: 1px solid #999999;
}
