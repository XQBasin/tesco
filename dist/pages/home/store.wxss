.top {
  margin: 1px 0 1px 0;
  padding: 22rpx 0;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
}
.top .search {
  width: 82%;
  height: 56rpx;
  border-radius: 30px;
  padding: 2px 10px;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  left: 10px;
  right: 0;
  /* 决定了搜索框置顶 */
  z-index: 2;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}
.top .search input {
  width: 100%;
  padding: 2rpx 5rpx;
  margin: 2rpx;
  font-size: 26rpx;
}
.top .text {
  height: 56rpx;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  right: 40rpx;
  /* 决定了搜索框置顶 */
  z-index: 2;
  display: flex;
  align-items: center;
}
.store-info {
  height: 126rpx;
  background: #fff;
  padding: 0 10px;
  margin-bottom: 9rpx;
}
.store-info .store-image {
  width: 80rpx;
  height: 80rpx;
  background: #b8b8b8;
  border-radius: 50%;
}
.store-info .text {
  padding-left: 10rpx;
}
.store-info .text .name {
  font-size: 28rpx;
  font-weight: bold;
}
.store-info .text .fans {
  font-size: 24rpx;
  color: #999999;
}
.store-info .follow {
  font-size: 24rpx;
  color: #f87005;
  border-radius: 40rpx;
  border: 1px solid #f87005;
  padding: 7rpx 20rpx;
}
.store-info .unfollow {
  font-size: 24rpx;
  color: #fff;
  border-radius: 40rpx;
  background: #f87005;
  padding: 7rpx 20rpx;
}
.item {
  font-weight: bold;
  height: 80rpx;
  background: #fff;
  margin-bottom: 4rpx;
}
.item view {
  width: 25%;
  line-height: 80rpx;
  float: left;
  text-align: center;
  position: relative;
}
.item .active {
  color: #f87005;
}
.item .line {
  width: 50rpx;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  background: #f87005;
  margin-left: -25rpx;
  border-radius: 2rpx;
}
.t {
  margin: 17rpx 0 37rpx 0;
  height: 150rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.t view {
  width: 49.2%;
  height: 150rpx;
  background: #cccccc;
}
.group-content {
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.group-content .group-content-list {
  padding-bottom: 11rpx;
  margin-bottom: 12rpx;
  width: 49%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 5rpx 7rpx 9rpx #c5c5c5;
  overflow: hidden;
}
.group-content .group-content-list .shop-detail {
  padding: 0 17rpx;
}
.group-content .group-content-list .shop-detail .shop-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 12rpx;
}
.group-content .group-content-list .shop-detail .price {
  margin-top: 12rpx;
  font-size: 36rpx;
  color: #f87005;
  font-weight: bold;
}
.group-content .group-content-list .shop-detail .price .coupon {
  font-size: 24rpx;
  margin-left: 5rpx;
  font-weight: normal;
}
.group-content .group-content-list .shop-detail .fill {
  width: 136rpx;
  height: 28rpx;
  background: #f87005;
  color: #fff;
  border-radius: 14rpx;
  font-size: 20rpx;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.group-content .group-content-list .shop-detail .evaluate {
  font-size: 24rpx;
  color: #bababa;
}
