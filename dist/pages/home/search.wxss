.top {
  margin-top: 22rpx;
  height: 56rpx;
}
.top .search {
  width: 80%;
  height: 56rpx;
  border-radius: 30px;
  padding: 2px 10px;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  left: 10px;
  right: 0;
  /* 决定了搜索框置顶 */
  z-index: 2;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}
.top .search input {
  width: 100%;
  padding: 2rpx 5rpx;
  margin: 2rpx;
  font-size: 26rpx;
}
.top .text {
  height: 56rpx;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  right: 50rpx;
  /* 决定了搜索框置顶 */
  z-index: 2;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.search-content {
  padding-left: 20rpx;
}
.search-content .title {
  padding: 24rpx 0 19rpx 0;
}
.search-content .text view {
  float: left;
  width: 220rpx;
  height: 58rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  background: #f4f4f4;
  text-align: center;
  line-height: 58rpx;
  margin: 0 20rpx 20rpx 0;
}
.search-content .text::after {
  display: block;
  content: '';
  clear: both;
  height: 0;
}
