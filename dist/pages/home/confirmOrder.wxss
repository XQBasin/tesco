.top {
  background: #fff;
  padding-right: 10px;
}
.top .text {
  line-height: 120rpx;
}
.top .select {
  height: 120rpx;
  position: relative;
  line-height: 120rpx;
}
.top .select image {
  width: 62rpx;
  height: 62rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -31rpx;
  margin-left: -31rpx;
}
.order-title {
  background: #fff;
  margin-top: 18rpx;
}
.order-title .text {
  line-height: 80rpx;
  color: #999999;
  font-size: 24rpx;
}
.order-title .store-icon {
  line-height: 80rpx;
}
.order-content {
  padding: 12rpx 10px 24rpx 10px;
}
.order-content .shop-image {
  float: left;
  width: 28%;
}
.order-content .text {
  float: right;
  width: 70%;
  font-size: 24rpx;
  position: relative;
}
.order-content .text .specs {
  color: #999999;
  margin: 20rpx 0 10rpx 0;
}
.order-content .text .total {
  color: #eb0202;
}
.order-content .text .number {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #666666;
}
.order-content::after {
  display: block;
  content: '';
  clear: both;
}
.coupon,
.coupon-list,
.message,
.goods-total {
  padding: 0 10px;
  background: #fff;
  margin-bottom: 6rpx;
}
.coupon .text,
.coupon-list .text,
.message .text,
.goods-total .text {
  line-height: 80rpx;
  position: relative;
}
.coupon .text text,
.coupon-list .text text,
.message .text text,
.goods-total .text text {
  position: absolute;
  top: 0;
  right: 0;
  color: #999999;
}
.dis-mask .text {
  width: 100%;
  background: #ececec;
  line-height: 72rpx;
  height: 72rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 30rpx;
}
.dis-mask .cancel-icon {
  position: absolute;
  right: 38rpx;
  top: 0;
  line-height: 72rpx;
}
.dis-mask .dis-title {
  height: 70rpx;
}
.dis-mask .dis-title .available.active,
.dis-mask .dis-title .unavailable.active {
  color: #f87005;
}
.dis-mask .dis-title .available,
.dis-mask .dis-title .unavailable {
  width: 50%;
  line-height: 70rpx;
  color: #999999;
  text-align: center;
  float: left;
  font-size: 28rpx;
  position: relative;
}
.dis-mask .dis-title .available .bottom,
.dis-mask .dis-title .unavailable .bottom {
  width: 144rpx;
  height: 4rpx;
  background: #f87005;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -85rpx;
}
.dis-mask .tip {
  padding-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background: rgba(248, 112, 5, 0.24);
}
.dis-mask .tip .price {
  margin-left: 60rpx;
}
.dis-mask .tip .price text {
  color: #eb0202;
}
.dis-mask .dis-image {
  margin-bottom: 20rpx;
}
.dis-mask .dis-item {
  position: relative;
  padding: 0 30rpx;
}
.dis-mask .dis-item view {
  position: absolute;
}
.dis-mask .dis-item .price {
  left: 90rpx;
  top: 0;
  font-size: 90rpx;
  font-weight: bold;
  color: #fff;
}
.dis-mask .dis-item .price text {
  font-size: 46rpx;
}
.dis-mask .dis-item .fill {
  top: 146rpx;
  left: 90rpx;
  color: #fff;
  font-size: 30rpx;
}
.dis-mask .dis-item .specs-title {
  top: 15rpx;
  left: 295rpx;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  border-radius: 20rpx;
  background: rgba(248, 112, 5, 0.24);
  font-size: 24rpx;
}
.dis-mask .dis-item .store {
  top: 73rpx;
  left: 295rpx;
  font-weight: bold;
  font-size: 24rpx;
}
.dis-mask .dis-item .time {
  top: 133rpx;
  left: 295rpx;
  color: #666666;
  font-size: 20rpx;
}
.dis-mask .dis-item .limit {
  top: 160rpx;
  left: 295rpx;
  color: #666666;
  font-size: 20rpx;
}
.dis-mask .dis-item .circle {
  right: 40rpx;
  top: 0;
  line-height: 200rpx;
}
.dis-mask .use {
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background: #f87005;
  font-weight: bold;
  font-size: 36rpx;
  color: #fff;
  border-radius: 40rpx;
}
.message {
  position: relative;
  margin-bottom: 20rpx;
}
.message .msg-area {
  position: absolute;
  top: 0;
  left: 145rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 550rpx;
}
.goods-total {
  padding-right: 10px;
}
.goods-total .text text {
  position: relative;
}
.goods-total .text .price {
  position: absolute;
  top: 0;
  right: 0;
  color: #999999;
}
.goods-total .text .price .number {
  color: #f87005;
}
.pay {
  width: 100%;
  height: 80rpx;
  background: #61b077;
  font-size: 30rpx;
  color: #fff;
  border-radius: 0;
  margin: 0;
  position: absolute;
  bottom: 0;
}
.pay::after {
  border: none;
}
