.top {
  padding-top: 50rpx;
  background: #fff;
}
.top image {
  width: 157rpx;
  height: 157rpx;
  margin: 0 auto;
}
.top .success {
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  color: #f87005;
  font-weight: bold;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  margin: 24rpx 0 13rpx 0;
}
.top .text {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  color: #999999;
}
.user-info {
  padding: 15rpx 10px;
  background: #fff;
  border-bottom: 1px dashed #999999;
}
.user-info .item {
  margin: 15rpx 0;
  display: flex;
}
.user-info .item .item-left {
  width: 22%;
  font-size: 30rpx;
  line-height: 45rpx;
  color: #191919;
  display: block;
}
.user-info .item .item-right {
  width: 70%;
  font-size: 26rpx;
  line-height: 45rpx;
  color: #999999;
  display: block;
}
.bottom {
  width: 100%;
  padding: 32rpx 0;
  background: #fff;
}
.bottom .more {
  width: 550rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.bottom .more .home,
.bottom .more .order {
  width: 240rpx;
  height: 99rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 99rpx;
  text-align: center;
}
.bottom .more .home {
  float: left;
  border: 1px solid #999999;
  color: #999999;
}
.bottom .more .order {
  float: right;
  border: 1px solid #f87005;
  color: #f87005;
}
.bottom image {
  width: 690rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
