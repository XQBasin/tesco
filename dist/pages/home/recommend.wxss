.head {
  padding: 27rpx 10px;
}
.head .text {
  text-align: center;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  background: #fff;
  font-size: 25rpx;
  display: inline-block;
  margin-right: 12rpx;
}
.head .active {
  background: #f87005;
  color: #fff;
}
.warp {
  padding: 0 10px;
  margin-bottom: 27rpx;
}
.warp .item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.warp .item .top {
  margin-bottom: 19rpx;
}
.warp .item .top .store-image,
.warp .item .top .store-info {
  float: left;
}
.warp .item .top .store-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #999999;
}
.warp .item .top .store-info {
  margin-left: 20rpx;
}
.warp .item .top .store-info .name {
  font-size: 28rpx;
  font-weight: bold;
}
.warp .item .top .store-info .detail {
  font-size: 24rpx;
  color: #999999;
}
.warp .item .top .enter {
  font-size: 24rpx;
  border-radius: 25rpx;
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1px solid #f87005;
  color: #f87005;
  float: right;
}
.warp .item .image {
  margin-bottom: 28rpx;
  display: flex;
  justify-content: space-between;
}
.warp .item .image .left {
  width: 70%;
  height: 370rpx;
  background: pink;
  border-radius: 10rpx;
}
.warp .item .image .right {
  width: 29%;
}
.warp .item .image .right .img1,
.warp .item .image .right .img2 {
  width: 100%;
  height: 180rpx;
  background: pink;
  border-radius: 10rpx;
}
.warp .item .image .right .img1 {
  margin-bottom: 10rpx;
}
.warp .item .bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.warp .item .bottom .browse,
.warp .item .bottom .praise {
  height: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #bababa;
  display: flex;
  align-items: center;
}
.warp .item .top::after {
  display: block;
  height: 0;
  clear: both;
  content: '';
}
