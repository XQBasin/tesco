.warp {
  height: 100rpx;
  background: #fff;
  padding: 22rpx 0;
}
.top {
  height: 56rpx;
}
.top .search {
  width: 80%;
  height: 56rpx;
  border-radius: 60rpx;
  padding: 2px 10px;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  left: 10px;
  right: 0;
  /* 决定了搜索框置顶 */
  z-index: 2;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}
.top .search input {
  width: 100%;
  padding: 2rpx 5rpx;
  margin: 2rpx;
  font-size: 26rpx;
}
.top .text {
  height: 56rpx;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  right: 60rpx;
  /* 决定了搜索框置顶 */
  z-index: 2;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.select {
  display: flex;
  border-top: 1px solid #cccccc;
  border-bottom: 1px solid #cccccc;
  background: #fff;
}
.select .sel-title {
  width: 25%;
  height: 90rpx;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.select .sel-title .sort {
  position: absolute;
  right: 40rpx;
  top: 25rpx;
}
.select .sel-title .sort span {
  display: block;
}
.select .active {
  color: #f87005;
}
.list {
  padding: 20rpx 10px;
  margin-bottom: 6px;
  background: #fff;
  position: relative;
  margin-bottom: 3rpx;
  display: flex;
}
.list .left {
  width: 40%;
}
.list .left image {
  width: 254rpx;
  height: 254rpx;
  border: 1px solid #bfbfbf;
}
.list .right {
  width: 55%;
  font-size: 28rpx;
}
.list .right .title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .right .total {
  font-size: 36rpx;
  color: #f87005;
  margin: 50rpx 0 6rpx 0;
  font-weight: bold;
}
.list .right .total text {
  margin-left: 30rpx;
  font-weight: normal;
  font-size: 24rpx;
}
.list .right .comment {
  font-size: 24rpx;
  color: #bababa;
}
.list .resetW {
  width: 55%;
}
.list .cancel {
  width: 10%;
  height: 204rpx;
  display: flex;
  align-items: center;
}
.group-content {
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 12rpx;
}
.group-content .group-content-list {
  padding-bottom: 11rpx;
  margin-bottom: 12rpx;
  width: 49%;
  background: #fff;
  box-shadow: 5rpx 7rpx 9rpx #c5c5c5;
  overflow: hidden;
}
.group-content .group-content-list .shop-detail {
  padding: 0 17rpx;
}
.group-content .group-content-list .shop-detail .shop-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 12rpx;
}
.group-content .group-content-list .shop-detail .price {
  margin-top: 12rpx;
  font-size: 36rpx;
  color: #f87005;
  font-weight: bold;
}
.group-content .group-content-list .shop-detail .price .coupon {
  font-size: 24rpx;
  margin-left: 5rpx;
  font-weight: normal;
}
.group-content .group-content-list .shop-detail .evaluate {
  font-size: 24rpx;
  color: #bababa;
}
